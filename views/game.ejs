<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
  </head>
  <body>
    <div class="container">
      <div>
        <div>
          <ul class="logo-container">
            <li>
              <div class="logo">
                <img src="../assets/logo.png" alt="" />
                <div class="game-store">
                  <p>GAME</p>
                  <p>STORE</p>
                </div>
              </div>
            </li>
            <li><a href="" class="support">Support</a></li>
          </ul>
        </div>
        <nav>
          <ul class="search-browse fixed-section" id="stickySection">
            <li>
              <form class="search" action="/developer" method="get">
                <label for="search-developer"></label>
                <div class="search-input">
                  <img src="../assets/search-icon.svg" alt="" />
                  <input
                    type="text"
                    name="search-developer"
                    id="search-developer"
                    placeholder="Search store"
                  />
                </div>
                <!-- <button type="submit">Search </button> -->
              </form>
            </li>
            <div class="browse-genre">
              <li><a href="">Browse</a></li>
              <li><a href="">Game developers</a></li>
            </div>
            <div class="new-game">
              <a href="/new-game"> Add Game </a>
            </div>
          </ul>
        </nav>
        <div class="popular-genres">
          <p class="heading">Search results</p>
        </div>
        <div class="games">
          <%games.forEach((game)=>{%>
          <div>
            <form class="game-item" action="/delete-game" method="post">
              <input
                class="hidden"
                type="text"
                id="delete_title"
                name="delete_title"
                value="<%=game.title%>"
              />
              <img class="game-img" src="<%=game.img_url%>" />

              <p class="hidden"><%=game.id%></p>
              <div class="title-view">
                <div class="title-rating">
                  <p class="game-title"><%=game.title%></p>
                  <p class="rating"><%=game.rating%>/10</p>
                </div>
                <a class="view-game" href="/game/<%=game.title%>">
                  View game
                </a>
              </div>

              <p class="release-year"><%=game.release_date%></p>
              <div class="edit-delete">
                <a
                  class="edit-game"
                  href="/edit-game?id=<%=game.id%>&title=<%=game.title%>&rating=<%=game.rating%>"
                >
                  Edit game details
                </a>
                <button
                  class="delete-game"
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this game from the database?')"
                >
                  Delete game
                </button>
                <!-- <li><%=game.developer%></li> -->
              </div>
            </form>
          </div>
          <%})%>
        </div>
      </div>
    </div>
    <script>
      const stickySection = document.getElementById("stickySection");
      const stickyOffset = stickySection.offsetTop;

      window.addEventListener("scroll", function () {
        if (window.pageYOffset > stickyOffset) {
          stickySection.classList.add("fixed");
        } else {
          stickySection.classList.remove("fixed");
        }
      });
    </script>
  </body>
</html>
