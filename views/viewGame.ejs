<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div>
        <div>
          <ul class="logo-container">
            <li>
              <a href="/">
                <div class="logo">
                  <img src="/assets/logo.png" alt="" />
                  <div class="game-store">
                    <p>GAME</p>
                    <p>STORE</p>
                  </div>
                </div>
              </a>
            </li>
            <li><a href="" class="support">Support</a></li>
          </ul>
        </div>
        <nav>
          <ul class="search-browse fixed-section" id="stickySection">
            <li>
              <form class="search" action="/game" method="get">
                <label for="search-developer"></label>
                <div class="search-input">
                  <img src="/assets/search-icon.svg" alt="" />
                  <input
                    type="text"
                    name="searchDeveloper"
                    id="search-developer"
                    placeholder="Search store"
                  />
                </div>
                <!-- <button type="submit">Search </button> -->
              </form>
            </li>
            <div class="browse-genre">
              <li><a href="">Browse</a></li>
              <li><a href="">Game developers</a></li>
            </div>
            <div class="new-game">
              <a href="/new-game"> Add Game </a>
            </div>
          </ul>
        </nav>
        <%games.forEach((game)=>{%>
        <div class="popular-genres">
          <p class="heading"><%=game.title%></p>
        </div>
        <div class="games">
          <div>
            <form class="view-game-item" action="/delete-game" method="post">
              <input
                class="hidden"
                type="text"
                id="delete_title"
                name="delete_title"
                value="<%=game.title%>"
              />
              <img class="game-img" src="<%=game.img_url%>" />

              <div class="game-details">
                <p class="hidden"><%=game.id%></p>
                <div class="title-view">
                  <div class="title-rating">
                    <p class="rating-name">RATING</p>
                    <a class="rating"><%=game.rating%>/10</a>
                  </div>
                </div>
                <!-- <hr />
                <div class="release-date">
                  <p>YEAR</p>
                  <p class="release-year"><%=game.release_date%></p>
                </div> -->
                <hr />
                <div class="edit-delete genres">
                  <p>GENRE</p>
                  <ul>
                    <%genres.forEach((genre)=>{%>

                    <li>
                      <a class="edit-game" href="/genre/<%=genre.name%>">
                        <%=genre.name%>
                      </a>
                    </li>

                    <%})%>
                  </ul>

                  <!-- <li><%=game.developer%></li> -->
                </div>
                <hr />
                <div class="new-edit-delete">
                  <a
                    class="edit-game"
                    href="/edit-game?id=<%=game.id%>&title=<%=game.title%>&rating=<%=game.rating%>"
                  >
                    Edit game
                  </a>
                  <button
                    class="delete-game"
                    type="submit"
                    onclick="return confirm('Are you sure you want to delete this game from the database?')"
                  >
                    Delete game
                  </button>
                </div>
              </div>
            </form>
          </div>
          <%})%>
        </div>
      </div>
    </div>
    <script>
      const stickySection = document.getElementById("stickySection");
      const stickyOffset = stickySection.offsetTop;

      window.addEventListener("scroll", function () {
        if (window.pageYOffset > stickyOffset) {
          stickySection.classList.add("fixed");
        } else {
          stickySection.classList.remove("fixed");
        }
      });
    </script>
  </body>
</html>
