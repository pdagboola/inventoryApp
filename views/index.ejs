<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div>
        <ul class="logo-container">
          <li>
            <div class="logo">
              <img src="../assets/logo.png" alt="" />
              <div class="game-store">
                <p>GAME</p>
                <p>STORE</p>
              </div>
            </div>
          </li>
          <li><a href="" class="support">Support</a></li>
        </ul>
      </div>
      <nav>
        <ul class="search-browse fixed-section" id="stickySection">
          <li>
            <form class="search" action="/developer" method="get">
              <label for="search-developer"></label>
              <div class="search-input">
                <img src="../assets/search-icon.svg" alt="" />
                <input
                  type="text"
                  name="search-developer"
                  id="search-developer"
                  placeholder="Search store"
                />
              </div>
              <!-- <button type="submit">Search </button> -->
            </form>
          </li>
          <div class="browse-genre">
            <li><a href="">Browse</a></li>
            <li><a href="">Genre</a></li>
            <li><a href="">Developers</a></li>
          </div>
        </ul>
      </nav>
      <div class="popular-genres">
        <p class="heading">Popular Genres</p>
        <div class="genre">
          <%genres.forEach((genre)=>{%>
          <div class="genre-item">
            <img src="<%=genre.img_url%>" alt="" />
            <p><%=genre.name%> Games</p>
          </div>
          <%})%>
        </div>
      </div>
      <div class="games">
        <%games.forEach((game)=>{%>
        <div>
          <form class="game-item" action="/delete-game" method="post">
            <input
              class="hidden"
              type="text"
              id="delete_title"
              name="delete_title"
              value="<%=game.title%>"
            />
            <img class="game-img" src="<%=game.img_url%>" />

            <p class="hidden"><%=game.id%></p>
            <p class="game-title"><%=game.title%></p>
            <p>Release Date:<%=game.release_date%></p>
            <p>Rating:<%=game.rating%></p>
            <button
              type="submit"
              onclick="return confirm('Are you sure you want to delete this game from the database?')"
            >
              Delete game
            </button>
            <a href="/game/<%=game.title%>">
              <button>View game</button>
            </a>
            <!-- <li><%=game.developer%></li> -->
            <a
              href="/edit-game?id=<%=game.id%>&title=<%=game.title%>&rating=<%=game.rating%>"
            >
              <button>Edit game details</button>
            </a>
          </form>
        </div>
        <%})%>
      </div>
      <a href="/new-game">
        <button>Add Game</button>
      </a>
    </div>
    <script>
      const stickySection = document.getElementById("stickySection");
      const stickyOffset = stickySection.offsetTop;

      window.addEventListener("scroll", function () {
        if (window.pageYOffset > stickyOffset) {
          stickySection.classList.add("fixed");
        } else {
          stickySection.classList.remove("fixed");
        }
      });
    </script>
  </body>
</html>
